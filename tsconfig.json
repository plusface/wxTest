{
  "compilerOptions": {
    "target": "ESNext",
    "noEmit": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    // "useDefineForClassFields": true,
    "baseUrl": ".",
    "importHelpers": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.ts"]
}
